<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">create</property>
    <mapping class="org.test.align.bean.TestAlignCompanyMain"/>
    <mapping class="org.test.align.bean.TestAlignAccountsMain"/>
    <mapping class="org.test.align.bean.TestAlignProjectMain"/>
    <mapping class="org.test.align.bean.TestAlignRolesAccount"/>
    <mapping class="org.test.align.bean.TestAlignRolesAdmin"/>
    <mapping class="org.test.align.bean.TestAlignRolesTypes"/>
  </session-factory>
</hibernate-configuration>
